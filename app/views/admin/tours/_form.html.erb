<%= simple_form_for([:admin, @tour]) do |f| %>

  <%= f.input :name %>

  <label for="description">Description</label>

  <%= f.input :description, 
  	as: :text, 
  	label: false,
  	class: 'form-control input-lg', 
  	rows: '100'
  %>

  <%= f.input :price %>

  <%= f.input :latitude %>

  <%= f.input :longitude %>

  <div class="panel panel-default">
    <div class="panel-body">

      <%= f.input :attachment, as: :file, label: 'File' %>
      <%= f.input :attachment_cache, as: :hidden %>
      <%= image_tag tour.attachment, class: 'img-responsive', alt: tour.name %>
    
    </div>
  </div>

  <%= f.button :submit, class: 'btn btn-orange btn-lg btn-block' %>

<% end %>